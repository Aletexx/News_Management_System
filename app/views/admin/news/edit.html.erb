<body>
<div class="sidenav">
  <%= link_to "Admin Home", admin_news_index_path %>
  <%= link_to "Create news", new_admin_news_path %>
  <%= link_to "Logout", news_home_path %>
</div>
<div class="main">
  <h1 class="pageTitle"> Admin - Games News Management System</h1>
  <div align="center">
    <ul id="myUL">
      <h2 id="pageName">Edit a news</h2>
      <!--      create a news-->
      <div class="forms" >
        <%= form_with model: @news, url: admin_news_path(@news), method: :patch do |e| %>
          <p><%= e.label :title %> <%= e.text_field :title %>
          <p><%= e.label :source %> <%= e.text_field :source %>
          <p><%= e.label :category_id %>  <%= collection_select(:news, :category_id, @categories, :id, :name) %>
          <p><%= e.label :content %> <%= e.text_area :content %>
          <p><%= e.submit "Save changes"%>
        <% end %>
        <%= link_to 'Back to admin homepage', admin_news_index_path %>
      </div>
    </ul>
  </div>
</div>

</body>
