<div class="sidenav">
  <%= link_to "Admin Home", admin_news_index_path %>
  <%= link_to "Create news", new_admin_news_path %>
  <%= link_to 'Edit and Delete Category', categories_path %>
</div>

<div class="main">
<h1 class="pageTitle">Admin - Games News Management System</h1>

<h2 id="pageName">Create a New Category</h2>
<ul id="myUL">

  <div class="forms">
<%= form_with model: @category, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.submit "Create Category" %>
  </p>
<% end %>
  </div>
</ul>
<%= link_to 'Back to Admin', admin_news_index_path %>
</div>