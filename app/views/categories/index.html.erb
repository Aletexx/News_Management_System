<h1 class="title">Categories</h1>
<div class="sidenav">
  <%= link_to "Admin Home", admin_news_index_path %>
  <%= link_to "Create news", new_admin_news_path %>
  <%= link_to 'Create New Category', new_category_path %>
  <%= link_to 'Edit and Delete Category', categories_path %>
</div>

<div class="main">
<ul id="myUL">
<!--  Show list of categories-->
  <% @categories.each do |category| %>
    <li>
      <h2 id="h2_news_title"> <%= category.name %>
        <%= button_to "Edit", edit_category_path(category), method: :get, class: "action-button" , id: 'link_style_button'%>
        <%= button_to 'Delete', category_path(category), method: :delete, onclick: "confirmDelete(event)" , id: 'link_style_button'%> </h2>
    </li>
  <% end %>
</ul>

<%= link_to 'Back to Home', admin_news_index_path %>
</div>
<script> // Prevents the deletion if the user clicks "Cancel"
function confirmDelete(event) {
if (!confirm("Are you sure you want to delete this item?")) {
event.preventDefault();
}
}
</script>